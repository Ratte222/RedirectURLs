@model RedirectURLs.Models.Link
@{
    ViewBag.Title = "Удаление ссылки";
}

<div>
    <dl class="dl-horizontal">
        <dt>Короткая ссылка</dt>
        <dd>
            @Html.DisplayFor(model => model.BuildShortLink)
        </dd>

        <dt>Полная ссылка</dt>
        <dd>
            @Html.DisplayFor(model => model.LongLink)
        </dd>
    </dl>

    <div>
        <form asp-controller="ManageLink" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>