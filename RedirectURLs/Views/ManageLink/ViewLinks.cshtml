@model IEnumerable<RedirectURLs.Models.Link>
@{
    ViewBag.Title = "Все ссылки";
}
<a asp-action="Create">Добавить ссылку</a>
<table class="table">
    <tr><td>Короткая ссылка</td><td>Действия</td></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BuildShortLink</td>
            <td>
                <a asp-action="Details" asp-controller="ManageLink" asp-route-id="@item.Id">Подробнее</a> |
                <a asp-action="Edit" asp-controller="ManageLink" asp-route-id="@item.Id">Изменить</a> |
                <a asp-action="Delete" asp-controller="ManageLink" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
    }
</table>